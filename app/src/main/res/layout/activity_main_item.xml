<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.snowdream.android.widget.SmartImageView
            android:id="@+id/imagen_producto"
            android:layout_width="130dp"
            android:layout_height="130dp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/descripcio_producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Descripcion Producto"
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/precio_producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="$300.000"
                android:textColor="#000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/idproducto"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/fecha_producto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Mayo"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="12dp" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>